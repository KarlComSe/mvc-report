<?xml version="1.0"?>
<ruleset name="PHPMD rule set"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="
                     http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        Custom rule set for mvc course.
    </description>

    <exclude-pattern>cache</exclude-pattern>
    <exclude-pattern>node_modules</exclude-pattern>
    <exclude-pattern>vendor</exclude-pattern>
    <exclude-pattern>migrations</exclude-pattern>
    <!-- Exclude earlier course assignments (not part of Kassabok project) -->
    <exclude-pattern>src/Dice</exclude-pattern>
    <exclude-pattern>src/Observer</exclude-pattern>
    <exclude-pattern>src/EventListener</exclude-pattern>
    <exclude-pattern>src/Model</exclude-pattern>
    <exclude-pattern>src/ApiResource</exclude-pattern>
    <exclude-pattern>src/Controller/LuckyController.php</exclude-pattern>
    <exclude-pattern>src/Controller/CardController.php</exclude-pattern>
    <exclude-pattern>src/Controller/GameController.php</exclude-pattern>
    <exclude-pattern>src/Controller/DeckApiController.php</exclude-pattern>
    <exclude-pattern>src/Controller/CurrencyController.php</exclude-pattern>
    <exclude-pattern>src/Controller/ApiController.php</exclude-pattern>
    <exclude-pattern>src/Service/DeckService.php</exclude-pattern>
    <exclude-pattern>tests/Model</exclude-pattern>
    <exclude-pattern>tests/Dice</exclude-pattern>

    <rule ref="rulesets/design.xml" />
    <rule ref="rulesets/cleancode.xml" />
    <rule ref="rulesets/codesize.xml" />
    <rule ref="rulesets/controversial.xml"/>

    <rule ref="rulesets/naming.xml">
        <exclude name="ShortVariable" />
        <exclude name="ShortMethodName" />
    </rule>

    <rule ref="rulesets/naming.xml/ShortVariable">
        <properties>
            <property name="exceptions" value="db,id,di,io,em,id" />
        </properties>
    </rule>

    <rule ref="rulesets/naming.xml/ShortMethodName">
        <properties>
            <property name="exceptions" value="t,e" />
        </properties>
    </rule>
    <rule ref="rulesets/unusedcode.xml" />

</ruleset>
