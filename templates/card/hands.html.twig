{# templates/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Visualizing some cards!{% endblock %}
{% block body %}
<main class="mt-3">
  <section>
    <h1>Here are some hands</h1>
    <p>
      Cards left in deck: {{deck.getNumberOfCards()}}
    </p>
    {% for hand in hands %}
    <li>Player {{loop.index}}
      <div class="flex items-center px-4 py-3 text-white bg-amber-600 hover:bg-amber-800">
        <span class="text-4xl">
        {% for card in hand.getHand() %}
        {{card}}
        {% endfor %}
      </span>
      </div>
      
    </li>
    {% endfor %}
  </section>
</main>
{% endblock %}