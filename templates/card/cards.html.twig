{# templates/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Visualizing some cards!{% endblock %}
{% block body %}
<main class="mt-3">
  <section>
    <h1>Here are some cards</h1>
    <div class="text-2xl">
      <div class="flex flex-wrap items-center">
      {% for card in cards %}
        <div class="p-2">
        {{ card }}
        </div>
      {% endfor %}
    </div>
    </div>
  </section>
</main>
{% endblock %}