{% extends 'kassabok/base.html.twig' %}
{% import 'kassabok/_breadcrumbs.html.twig' as breadcrumb_helper %}
{% block title %}Resultaträkning - {{ journal.organization.name }}{% endblock %}

{% block breadcrumb %}
{{ breadcrumb_helper.trail([
{ label: 'Kontrollpanel', path: path('kassabok_organization') },
{ label: journal.organization.name, path: path('kassabok_journals', {organization: journal.organization.id}) },
{ label: 'Resultaträkning', path: null }
]) }}
{% endblock %}


{% block body %}
<div class="container mt-4">
    {# Report header #}
    <div class="card mb-4">
        <div class="card-header">
            <h2 class="mb-0">Resultaträkning</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <strong>Organisation:</strong> {{ organization.name }}
                </div>
                <div class="col-md-6">
                    <strong>Räkenskapsår:</strong>
                    {{ journal.firstDay|date('Y-m-d') }} till {{ journal.lastDay|date('Y-m-d') }}
                </div>
            </div>
        </div>
    </div>

    {# Income Statement #}
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-body">
                    {# Revenue Section #}
                    <h4 class="mb-3">Intäkter</h4>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 15%;">Kontonummer</th>
                                    <th style="width: 55%;">Kontonamn</th>
                                    <th style="width: 30%;" class="text-end">Belopp</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if report.revenues|length > 0 %}
                                    {% for accountData in report.revenues %}
                                        <tr>
                                            <td>{{ accountData.account.accountNumber }}</td>
                                            <td>{{ accountData.account.name }}</td>
                                            <td class="text-end">
                                                {{ accountData.balance|number_format(2, ',', ' ') }} kr
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    <tr class="table-secondary fw-bold">
                                        <td colspan="2" class="text-end">Summa intäkter:</td>
                                        <td class="text-end">{{ report.totalRevenue|number_format(2, ',', ' ') }} kr</td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="3" class="text-muted text-center">
                                            <em>Inga intäkter registrerade</em>
                                        </td>
                                    </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </div>

                    <hr class="my-4">

                    {# Expense Section #}
                    <h4 class="mb-3">Kostnader</h4>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 15%;">Kontonummer</th>
                                    <th style="width: 55%;">Kontonamn</th>
                                    <th style="width: 30%;" class="text-end">Belopp</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if report.expenses|length > 0 %}
                                    {% for accountData in report.expenses %}
                                        <tr>
                                            <td>{{ accountData.account.accountNumber }}</td>
                                            <td>{{ accountData.account.name }}</td>
                                            <td class="text-end">
                                                {{ accountData.balance|number_format(2, ',', ' ') }} kr
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    <tr class="table-secondary fw-bold">
                                        <td colspan="2" class="text-end">Summa kostnader:</td>
                                        <td class="text-end">{{ report.totalExpenses|number_format(2, ',', ' ') }} kr</td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="3" class="text-muted text-center">
                                            <em>Inga kostnader registrerade</em>
                                        </td>
                                    </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </div>

                    <hr class="my-4">

                    {# Net Income #}
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <tbody>
                                <tr class="table-primary fw-bold fs-5">
                                    <td colspan="2" class="text-end">
                                        {% if report.netIncome >= 0 %}
                                            Årets resultat (vinst):
                                        {% else %}
                                            Årets resultat (förlust):
                                        {% endif %}
                                    </td>
                                    <td class="text-end" style="width: 30%;">
                                        <span class="{% if report.netIncome >= 0 %}text-success{% else %}text-danger{% endif %}">
                                            {{ report.netIncome|number_format(2, ',', ' ') }} kr
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Back button #}
    <div class="mb-4">
        <a href="{{ path('kassabok_journals', {organization: organization.id}) }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Tillbaka till kassaböcker
        </a>
    </div>
</div>
{% endblock %}
