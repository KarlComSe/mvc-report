{% extends 'kassabok/base.html.twig' %}
{% import 'kassabok/_breadcrumbs.html.twig' as breadcrumb_helper %}
{% block title %}{{ journal.organization.name }} - Kassabok{% endblock %}

{% block breadcrumb %}
{{ breadcrumb_helper.trail([
{ label: 'Kontrollpanel', path: path('kassabok_organization') },
{ label: journal.organization.name, path: path('kassabok_journals', {organization: journal.organization.id}) },
{ label: 'Kassabok', path: null }
]) }}
{% endblock %}


{% block body %}
<div class="container mt-4">
    {# Flash messages #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {# Journal information card #}
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Kassabok för {{ organization.name }}</h5>
            <a href="{{ path('kassabok_add_entry', {journal: journal.id}) }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Lägg till verifikat
            </a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <strong>Räkenskapsår:</strong><br>
                    {{ journal.firstDay|date('Y-m-d') }} till {{ journal.lastDay|date('Y-m-d') }}
                </div>
                <div class="col-md-4">
                    <strong>Kontoplan:</strong><br>
                    {{ journal.chartOfAccounts.name }}
                </div>
                <div class="col-md-4">
                    <strong>Antal verifikat:</strong><br>
                    {{ journal.journalEntries|length }}
                </div>
            </div>
        </div>
    </div>

    {# Journal entries table #}
    <h2>Bokföringsdagbok</h2>

    {% if journal.journalEntries|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th style="width: 5%;">#</th>
                        <th style="width: 10%;">Datum</th>
                        <th style="width: 25%;">Verifikattext</th>
                        <th style="width: 30%;">Konto</th>
                        <th style="width: 15%;" class="text-end">Debet</th>
                        <th style="width: 15%;" class="text-end">Kredit</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entry in journal.journalEntries %}
                        {% set lineItems = entry.journalLineItems %}
                        {% if lineItems|length > 0 %}
                            {% for lineItem in lineItems %}
                                <tr>
                                    {% if loop.first %}
                                        <td rowspan="{{ lineItems|length }}" class="align-middle">
                                            <strong>{{ entry.id }}</strong>
                                        </td>
                                        <td rowspan="{{ lineItems|length }}" class="align-middle">
                                            {{ entry.date|date('Y-m-d') }}
                                        </td>
                                        <td rowspan="{{ lineItems|length }}" class="align-middle">
                                            {{ entry.title }}
                                        </td>
                                    {% endif %}
                                    <td>
                                        {{ lineItem.account.accountNumber }} - {{ lineItem.account.name }}
                                    </td>
                                    <td class="text-end">
                                        {% if lineItem.debitAmount %}
                                            {{ lineItem.debitAmount|number_format(2, ',', ' ') }} kr
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        {% if lineItem.creditAmount %}
                                            {{ lineItem.creditAmount|number_format(2, ',', ' ') }} kr
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            {# Show totals for this entry #}
                            <tr class="table-secondary">
                                <td colspan="4" class="text-end"><strong>Verifikat {{ entry.id }} - Summa:</strong></td>
                                <td class="text-end">
                                    <strong>
                                        {% set totalDebit = 0 %}
                                        {% for item in lineItems %}
                                            {% if item.debitAmount %}
                                                {% set totalDebit = totalDebit + item.debitAmount %}
                                            {% endif %}
                                        {% endfor %}
                                        {{ totalDebit|number_format(2, ',', ' ') }} kr
                                    </strong>
                                </td>
                                <td class="text-end">
                                    <strong>
                                        {% set totalCredit = 0 %}
                                        {% for item in lineItems %}
                                            {% if item.creditAmount %}
                                                {% set totalCredit = totalCredit + item.creditAmount %}
                                            {% endif %}
                                        {% endfor %}
                                        {{ totalCredit|number_format(2, ',', ' ') }} kr
                                    </strong>
                                </td>
                            </tr>
                            {# Spacing between entries #}
                            <tr><td colspan="6" style="height: 10px;"></td></tr>
                        {% else %}
                            {# Entry without line items #}
                            <tr>
                                <td><strong>{{ entry.id }}</strong></td>
                                <td>{{ entry.date|date('Y-m-d') }}</td>
                                <td>{{ entry.title }}</td>
                                <td colspan="3" class="text-muted"><em>Inga konteringar</em></td>
                            </tr>
                            <tr><td colspan="6" style="height: 10px;"></td></tr>
                        {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info">
            <strong>Ingen bokföring ännu.</strong>
            Klicka på knappen ovan för att lägga till ditt första verifikat.
        </div>
    {% endif %}
</div>
{% endblock %}
