{% macro trail(items) %}
<nav aria-label="breadcrumb" class="mt-2">
    <div class="container">
        <ol class="breadcrumb">
            {% for item in items %}
            {% if loop.last %}
            <li class="breadcrumb-item active" aria-current="page">{{ item.label }}</li>
            {% else %}
            <li class="breadcrumb-item">
                <a href="{{ item.path }}">{{ item.label }}</a>
            </li>
            {% endif %}
            {% endfor %}
        </ol>
    </div>
</nav>
{% endmacro %}