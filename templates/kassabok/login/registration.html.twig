
{% extends 'kassabok/base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="container mt-5">
        <form>
            <img class="rounded mx-auto d-block mb-4 img-fluid col-1" src="../img/logo.png"
            alt="Kassaboks logotyp: En enkel skiss av en hand.">
            <h1 class="h3 mb-3 fw-normal">Logga in  1</h1>
            
            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">E-post</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Lösenord</label>
            </div>
            
            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Håll mig inloggad.
                </label>
            </div>
            <button class="btn btn-primary w-100 py-2" type="submit">Logga in</button>
        </form>
</div>
{% endblock %}